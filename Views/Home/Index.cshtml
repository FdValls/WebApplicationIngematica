@{
    ViewData["Title"] = "CV - Fernando Valls";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5 card-main">

        <div style="text-align: center; margin-top: 10px">
            <img src="~/img/perfil.jpg" alt="Foto" class="img-fluid" />
        </div>

        <section>

            <h3 style="text-align: center; margin-top: 10px">Fernando Daniel Valls</h3>
            <div class="section-links">
                <div>
                    <span class="material-symbols-outlined"> link </span>
                    <span class="link-like" onclick="redirectPage('https://www.linkedin.com/in/fernando-daniel-valls-5a3787156/')"> <b>Linkedin</b></span>
                </div>
                <div>
                    <span class="material-symbols-outlined">link</span>
                    <span class="link-like" onclick="redirectPage('https://drive.google.com/drive/folders/1Gu_SkCaxsWRoMCPApjA9jV548BDBMdfc')"> <b>Drive con CV</b></span>
                </div>
            </div>
        </section>

        <section style="margin-top: 15px">

            <h3>Formulario de Contacto</h3>
            <div class="section-contact">
                <form method="post" asp-controller="Home" asp-action="Index">
                    <div class="form-group">
                        <label for="name">Nombre:</label>
                        <input type="text" id="name" name="name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico:</label>
                        <input type="email" id="email" name="email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="telefono">Número de contacto:</label>
                        <input type="text" id="telefono" name="telefono" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="message">Asunto:</label>
                        <textarea style="height: 100px" id="message" name="message" class="form-control" required></textarea>
                    </div>

                    <div class="button-enviar">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </section>
    </div>

    <script src="~/js/site.js"></script>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script>
            showMessage("@Html.Raw(ViewBag.Message)");
        </script>
    }
</body>

</html>
